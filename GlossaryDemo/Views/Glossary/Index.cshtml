@model IEnumerable<GlossaryDemo.Models.GlossaryMain>

@{
    ViewBag.Title = "Index";
}

<h2>Glossary CRUD</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Term", "Index", new { sortOrder = ViewBag.SortTermParm })
        </th>
        <th>
            @Html.ActionLink("Definition", "Index", new { sortOrder = ViewBag.DefinitionParm })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Term)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Definition)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
